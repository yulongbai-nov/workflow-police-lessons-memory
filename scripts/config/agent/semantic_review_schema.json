{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WorkflowSemanticReview",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "summary",
    "findings"
  ],
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "severity",
          "rule",
          "message",
          "evidence",
          "recommendation"
        ],
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "rule": {
            "type": "string",
            "minLength": 1
          },
          "message": {
            "type": "string",
            "minLength": 1
          },
          "evidence": {
            "type": "string"
          },
          "recommendation": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
